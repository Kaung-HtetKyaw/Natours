extends base

block content
   main.main
   .login-form
      h2.heading-secondary.ma-bt-lg Log into your account
      form.form--signup
         .form__group
         label.form__label(for='name') User Name
         input#name.form__input(type='text', placeholder='Enter Your Name', required)
         label.form__label(for='email') Email Address
         input#email.form__input(type='email', placeholder='you@example.com', required)
         .form__group.ma-bt-md
         label.form__label(for='password') Password
         input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
         label.form__label(for='confirmedPassword') Confirm Password
         input#confirmedPassword.form__input(type='password', placeholder='••••••••', required, minlength='8')
         .form__group
         button.btn.btn--green Sign Up